@model List<CheeseMVC.Models.Menu>

<h1>Cheese Menu</h1>

<table class="table">

    <tr>
        <th>Name</th>
    </tr>

    @foreach (var CheeseMenus in Model)
    {
            <td>@CheeseMenus.Name</td>
            <form asp-controller="CheeseMenus" asp-action="Add" method="post"></form>
    }
</table>

<form asp-controller="CheeseMenus" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <input type="submit" value="Add Category" />

</form>